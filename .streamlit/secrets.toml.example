# 🏮 TONOSAMA Professional System - Secrets Configuration Example
# 1兆円ダイヤモンド級セキュリティ設定例

# このファイルをsecrets.tomlとしてコピーして使用してください
# 本番環境では絶対にGitにコミットしないでください

# OpenAI API Configuration
openai_api_key = "sk-your-openai-api-key-here"

# Google Drive API Configuration (オプション)
google_client_id = "your-google-client-id"
google_client_secret = "your-google-client-secret"
google_api_key = "your-google-api-key"

# Email Configuration (オプション)
sendgrid_api_key = "your-sendgrid-api-key"
admin_email = "nolimits1218@gmail.com"

# Gmail App Password (SendGridの代替)
gmail_app_password = "your-gmail-app-password"

# System Configuration
app_name = "TONOSAMA Professional System"
version = "2.0 Diamond Edition"
admin_contact = "nolimits1218@gmail.com"

[database]
# Database configuration (オプション)
# connection_string = "your-database-connection-string"

[deployment]
# Deployment configuration
# github_repo = "your-github-repo"
# branch = "main"

# Security Settings
[security]
# session_timeout = 3600  # 1時間
# max_upload_size = 200   # MB